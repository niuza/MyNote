<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_checked"
    android:padding="@dimen/simple_info_item_content_padding" >

    <TextView
        android:id="@+id/simple_info_item_tv_note_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/simple_info_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1234"
        android:textColor="#777777"
        android:textSize="16sp" />

    <View
        android:id="@+id/simple_info_item_split_line"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/simple_info_item_tv_date"
        android:background="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/simple_info_item_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/simple_info_item_split_line"
        android:maxLength="20"
        android:text="12345678901234567890212121121ghuofidsdasfgfjdsgodsfhogihdsfiguh"
        android:textColor="#4b4a4c"
        android:textSize="16sp" />

    <CheckBox
        android:focusable="false"
        android:checked="false"
        android:id="@+id/simple_info_item_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:background="@null"
        android:button="@drawable/checkbox"
        android:visibility="gone" />

</RelativeLayout>