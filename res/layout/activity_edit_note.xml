<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:focusableInTouchMode="true">

    <!-- 头部的一些选择栏 -->

    <RelativeLayout
        android:id="@+id/activity_edit_note_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/titlebar_bg" >

        <Button
            android:id="@+id/activity_edit_note_btn_back"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_change"
            android:text="返  回"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/activity_edit_note_btn_save"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_change"
            android:text="保  存"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/activity_edit_note_btn_camera"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/activity_edit_note_btn_save"
            android:background="@drawable/btn_change"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/camera" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp" 
        android:layout_marginTop="48dp"
        android:id="@+id/activity_edit_note_tv_time"
        android:background="@drawable/list_item_normal"
        android:text="2014-4-7 8:32"
        android:gravity="center_vertical"/>

    <cn.ahcme.ui.StringSpanEdit
        android:layout_marginTop="-2dp"
        android:id="@+id/activity_edit_note_data_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_edit_note_tv_time"
        android:background="@drawable/list_item_normal"
        android:gravity="top" />

</RelativeLayout>